from luma.core.interface.serial import spi
from luma.lcd.device import pcd8544
from luma.core.render import canvas
from time import sleep
from PIL import ImageFont

import psutil
import socket
from datetime import datetime

interface = spi(port=0, device=0, gpio_DC=23, gpio_RST=24)
disp = pcd8544(serial_interface=interface)
disp.capabilities(84, 48, 2)
disp.contrast(60)
disp.clear()


hostname = "raspberrypi.local"

font = ImageFont.truetype("TinyPixy.ttf", 10)

while True:
	with canvas(disp) as draw:
		draw.rectangle(disp.bounding_box, outline="white")
		draw.text((2,-3), hostname, fill="white", font=font)
		draw.text((2,3), socket.gethostbyname(hostname), fill="white", font=font)
		draw.text((2,9), "CPU Usage: {}%".format(psutil.cpu_percent()), fill="white", font=font)
		draw.text((2,15), "RAM Usage: {}%".format(psutil.virtual_memory().percent), fill="white", font=font)
	sleep(0.5)
